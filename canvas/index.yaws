<html>
  <body>
    <canvas id="canvas" />
    <script>
      var canvas = document.getElementById("canvas");
      canvas.width = 200;
      canvas.height = 200;  
      var c = canvas.getContext("2d");
      var rect = <erl>
        rects() -> f("{x:~p, y:~p, w:~p, h:~p}",
                     [20*random:uniform(5), 20*random:uniform(5), 20, 20]).

        out(_Args) -> random:seed(now()),
                      {html, rects()}.
      </erl>;
      c.fillRect(rect.x, rect.y, rect.w, rect.h);
    </script>
  </body>
</html>
